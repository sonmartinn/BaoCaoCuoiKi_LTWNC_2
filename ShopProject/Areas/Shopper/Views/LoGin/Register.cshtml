@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = null; // Nếu không sử dụng layout thì để null
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            font-family: "Helvetica Neue", "Open sans", sans-serif;
            background-color: #2c3e50;
            background-image: linear-gradient(120deg, #f6d365 0%, #fda085 100%);
            color: white;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.5);
            max-width: 400px;
            width: 100%;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #f39c12;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .form-group label {
            color: #f1c40f;
        }

        .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 10px;
            font-size: 16px;
        }

            .form-control:focus {
                background-color: rgba(255, 255, 255, 0.2);
                border: 1px solid #f39c12;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #f39c12;
            border: none;
            width: 100%;
            padding: 10px;
            margin-top: 20px;
            font-size: 18px;
            font-weight: bold;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                background-color: #e67e22;
            }

        .text-danger {
            text-align: center;
            margin-top: 15px;
        }

        .form-footer {
            margin-top: 20px;
            text-align: center;
        }

            .form-footer a {
                color: #f39c12;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }

        .show-password {
            margin-top: 10px;
        }
    </style>
    <script>
        function togglePassword() {
            var passwordField = document.getElementById("txtPassword");
            var confirmPasswordField = document.getElementById("txtConfirmPassword");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                confirmPasswordField.type = "text";
            } else {
                passwordField.type = "password";
                confirmPasswordField.type = "password";
            }
        }
    </script>
</head>

<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>

        <form method="post" action="@Url.Action("Register", "LoGin")">
            <div class="form-group">
                <label for="txtUsername">Tên tài khoản</label>
                <input type="text" id="txtUsername" name="username" class="form-control" placeholder="Nhập tên tài khoản" required />
            </div>

            <div class="form-group">
                <label for="txtEmail">Email</label>
                <input type="email" id="txtEmail" name="email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="form-group">
                <label for="txtPassword">Mật khẩu</label>
                <input type="password" id="txtPassword" name="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <div class="form-group">
                <label for="txtConfirmPassword">Xác nhận mật khẩu</label>
                <input type="password" id="txtConfirmPassword" name="confirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" required />
            </div>

            <div class="form-group show-password">
                <input type="checkbox" id="showPassword" onclick="togglePassword()" />
                <label for="showPassword">Hiển thị mật khẩu</label>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }

            <button type="submit" class="btn btn-primary">Đăng ký</button>

            <div class="form-footer">
                <p>Đã có tài khoản? <a href="@Url.Action("Index", "LoGin")">Đăng nhập</a></p>
            </div>
        </form>
    </div>
</body>

</html>
